<%- model_class = Vehicle -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped" id="vehicles_table">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:lateral_number) %></th>
      <th><%= model_class.human_attribute_name(:registration_plate) %></th>
      <th><%= model_class.human_attribute_name(:latitude) %></th>
      <th><%= model_class.human_attribute_name(:longitude) %></th>
      <th><%= model_class.human_attribute_name(:last_location) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.id %></td>
          <td><%= vehicle.name %></td>
          <td><%= vehicle.lateral_number %></td>
          <td><%= vehicle.registration_plate %></td>
          <td><%= vehicle.latitude %></td>
          <td><%= vehicle.longitude %></td>
          <td><%= vehicle.last_location %></td>
        <td><%=l vehicle.created_at, format: :long %></td>
        <td>
          <%= link_to vehicle_path(vehicle), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_vehicle_path(vehicle), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to vehicle_path(vehicle), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")),
            new_vehicle_path,
            class: 'btn btn-primary' %>

<script type="text/javascript">
 $(function(){
  $('#vehicles_table').DataTable();
 });
</script>