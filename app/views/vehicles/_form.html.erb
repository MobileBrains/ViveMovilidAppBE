<%= form_for @vehicle, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :lateral_number, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :lateral_number, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :registration_plate, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :registration_plate, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :latitude, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :latitude, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :longitude, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :longitude, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_location, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :last_location, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  vehicles_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
